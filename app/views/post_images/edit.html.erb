<h2>観光地編集</h2>
<span>現在ログイン中のユーザー：<%= current_user.name %></span>

<% if @post_image.errors.any? %>
  <%= @post_image.errors.count %>件のエラーが発生しました
  <ul>
    <% @post_image.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @post_image do |f| %>
  <label for="inputName">観光地名</label>
  <%= f.text_field :title, autofocus: true, id:"inputName", placeholder:"名前"%>
	<label for="inputImage">画像</label>
  <%= f.file_field :image, placeholder: "画像", accept: "image/*" %> 
  <label for="inputbody">説明</label>
  <%= f.text_area :body, autofocus: true, id:"inputbody", placeholder:"説明"%>
  <% if @post_image.user == current_user %>
    <%= link_to "削除", post_image_path(@post_image), method: :delete, data: {confirm: "削除しますか？"} %>
    <%= f.submit "更新" %>
  <% end %>
	
<% end %>